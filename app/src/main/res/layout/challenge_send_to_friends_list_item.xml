<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/challenge_send_to_friends_item_wrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:elevation="8dp"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/challenge_send_to_friends_item_image"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/com_facebook_profile_picture_blank_square"
        android:transitionName="profile_picture" />

    <TextView
        android:id="@+id/challenge_send_to_friends_item_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/challenge_send_to_friends_item_image"
        android:text="@string/username_hint"
        android:textColor="@color/gunmetal5"
        android:textSize="17sp"
        android:textStyle="bold"
        android:transitionName="profile_name" />

    <ImageView
        android:id="@+id/challenge_send_to_friends_item_ic_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="end|bottom"
        android:layout_toEndOf="@id/challenge_send_to_friends_item_username"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_done" />

</RelativeLayout>